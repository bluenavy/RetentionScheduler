<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   	android:background="#F3F781"
    android:weightSum="1">

    <EditText
        android:id="@+id/event_name"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:textColor="#000000"
	    android:hint="@string/event_name"/>

    <EditText
       	android:id="@+id/description_name"
	    android:layout_width="match_parent"
	    android:layout_height="50dp"
	    android:layout_below="@+id/event_name"
        android:textColor="#000000"
	    android:hint="@string/hint_desc"/>

    <EditText
        android:id="@+id/file"
        android:layout_width="300dp"
    	android:layout_height="50dp"
    	android:layout_below="@+id/description_name"
        android:textColor="#000000"
        android:hint="Add file"/>

    <Button
        android:id="@+id/add1"
        android:layout_width="50dp"
    	android:layout_height="50dp"
    	android:layout_toRightOf="@+id/file"
    	android:layout_below="@+id/description_name"
        android:textColor="#000000"
        android:text="+"/>
    
    <EditText
        android:id="@+id/file1"
        android:layout_width="300dp"
    	android:layout_height="50dp"
    	android:layout_below="@+id/file"
        android:textColor="#000000"
        android:hint="Add file"/>


    <Button
        android:id="@+id/add_events"
        style="@style/ButtonText"
        android:layout_width="192dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/file1"
        android:background="#2E2EFE"
        android:onClick="onClick"
        android:padding="10dp"
        android:text="Next"
        android:textColor="#000000" />

</RelativeLayout>
